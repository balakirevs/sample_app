require 'spec_helper'

describe "Users" do
  
  describe "signup" do
  
    describe "failure" do
      it "should not make a new user" do
        lambda do
          visit signup_path
          fill-in "Name",          :with => ""
          fill-in "Email",         :with => ""
          fill-in "Password",      :with => ""
          fill-in "Confirmation",  :with => ""
          click_button
          response.should render_template('users/new')
          response.should render_template('div#error_explanation')
        end.should_not change(User, :count)        
      end
    end
    
     describe "success" do
      it "should make a new user" do
        lambda do
          visit signup_path
          fill-in "Name",          :with => "Example User"
          fill-in "Email",         :with => "user@example.com"
          fill-in "Password",      :with => "foobar"
          fill-in "Confirmation",  :with => "foobar"
          click_button
        end
      end
    end    
  end
end

